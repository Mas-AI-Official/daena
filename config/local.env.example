# Local development environment (SAFE DEFAULTS)
# Copy to: config/local.env

# No-auth local dev
DISABLE_AUTH=1
DEV_FOUNDER_NAME=Masoud

# Local-first: do not use cloud LLMs unless explicitly enabled
ENABLE_CLOUD_LLM=0

# Optional: install audio extras (requirements-audio.txt) when running launcher
ENABLE_AUDIO=0

# Server
ENVIRONMENT=development
LOG_LEVEL=INFO
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000

# Local Ollama (recommended)
OLLAMA_BASE_URL=http://localhost:11434
DEFAULT_LOCAL_MODEL=qwen2.5:14b-instruct
FALLBACK_LOCAL_MODEL=qwen2.5:7b-instruct
FALLBACK_LOCAL_MODEL=llama3.2:3b
TRAINED_DAENA_MODEL=daena-brain

# Prompt Intelligence Brain (always-on prompt optimizer)
PROMPT_BRAIN_ENABLED=1
PROMPT_BRAIN_MODE=rules
PROMPT_BRAIN_COMPLEXITY_THRESHOLD=50
PROMPT_BRAIN_ALLOW_LLM_REWRITE=0








