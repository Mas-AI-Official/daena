# Daena Production Environment Variables
# Copy this to .env or set in your deployment environment
# DO NOT commit real secrets to git

# ============================================
# AUTHENTICATION & SECURITY
# ============================================
# Set to 0 in production to enforce authentication
DISABLE_AUTH=0

# JWT secret (REQUIRED if DISABLE_AUTH=0)
# Generate a strong random secret: openssl rand -hex 32
JWT_SECRET_KEY=your_jwt_secret_key_here

# API keys for authentication (optional, for API key auth)
DAENA_API_KEY=your_api_key_here
DAENA_SECRET_KEY=your_secret_key_here
DAENA_TEST_API_KEY=your_test_key_here

# Skill capsules encryption key (optional)
CAPSULE_SECRET_KEY=your_capsule_secret_here

# ============================================
# LLM PROVIDERS (OPTIONAL - Local-first by default)
# ============================================
# OpenAI
OPENAI_API_KEY=

# Azure OpenAI
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_DEPLOYMENT_NAME=

# Anthropic
ANTHROPIC_API_KEY=

# Google Gemini
GEMINI_API_KEY=

# DeepSeek
DEEPSEEK_API_KEY=

# Grok
GROK_API_KEY=

# Mistral
MISTRAL_API_KEY=

# ============================================
# DATABASE & STORAGE
# ============================================
# Database path (SQLite default, or PostgreSQL connection string)
DATABASE_URL=sqlite:///./daena.db

# NBMF memory store paths (local storage)
NBMF_L1_STORE=.l1_store
NBMF_L2_STORE=.l2_store
NBMF_L3_STORE=.l3_store

# ============================================
# LOGGING
# ============================================
# Environment: development, staging, production
ENVIRONMENT=production

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Log file path (optional, defaults to console)
LOG_FILE=logs/daena.log

# ============================================
# AUTOMATION TOOLS (OPTIONAL)
# ============================================
# Enable automation tools (selenium, pyautogui)
ENABLE_AUTOMATION_TOOLS=0

# Browser automation settings
AUTOMATION_ENABLE_BROWSER=0
AUTOMATION_ENABLE_DESKTOP=0

# Allowed domains for web automation (comma-separated)
# Example: AUTOMATION_ALLOWED_DOMAINS=example.com,test.com
AUTOMATION_ALLOWED_DOMAINS=

# Automation timeouts (seconds)
AUTOMATION_REQUEST_TIMEOUT_SEC=30
AUTOMATION_ACTION_TIMEOUT_SEC=10

# Rate limiting (requests per minute)
AUTOMATION_RATE_LIMIT_PER_MIN=10

# ============================================
# SERVER CONFIGURATION
# ============================================
# Host and port
HOST=0.0.0.0
PORT=8000

# CORS origins (comma-separated)
# Example: CORS_ORIGINS=https://daena.ai,https://app.daena.ai
CORS_ORIGINS=

# ============================================
# VOICE SERVICES (OPTIONAL)
# ============================================
# ElevenLabs
ELEVENLABS_API_KEY=

# D-ID
DID_API_KEY=

# Google TTS
GOOGLE_TTS_API_KEY=

# ============================================
# MONITORING
# ============================================
# Monitoring API key (for /api/v1/registry/summary, etc.)
DAENA_MONITORING_API_KEY=

# ============================================
# RATE LIMITING
# ============================================
# Chat endpoint rate limit (requests per minute per IP)
CHAT_RATE_LIMIT_PER_MIN=60

# ============================================
# PROMPT INTELLIGENCE BRAIN
# ============================================
# Always-on prompt optimizer (enabled by default)
PROMPT_BRAIN_ENABLED=1
# Mode: rules (cheap), hybrid (selective LLM rewrite), llm_rewrite (expensive)
PROMPT_BRAIN_MODE=rules
# Skip optimization for prompts shorter than this (characters)
PROMPT_BRAIN_COMPLEXITY_THRESHOLD=50
# Allow LLM-based rewrite (only if mode is hybrid or llm_rewrite)
PROMPT_BRAIN_ALLOW_LLM_REWRITE=0

# ============================================
# LOCAL OLLAMA (OPTIONAL)
# ============================================
OLLAMA_BASE_URL=http://localhost:11434
DEFAULT_LOCAL_MODEL=qwen2.5:7b-instruct
FALLBACK_LOCAL_MODEL=llama3.2:3b
TRAINED_DAENA_MODEL=daena-brain

# ============================================
# DEVELOPMENT ONLY
# ============================================
# Dev founder name (only used when DISABLE_AUTH=1)
DEV_FOUNDER_NAME=Masoud






